{
  "compilerOptions": {
    "target": "es2020",                     // Set ECMAScript target version
    "module": "commonjs",                    // Specify module code generation
    "strict": true,                          // Enable strict type-checking options
    "esModuleInterop": true,                 // Allow default imports from modules with no default export
    "forceConsistentCasingInFileNames": true,// Enforce consistent casing in module imports
    "skipLibCheck": true,                    // Skip type checking of declaration files
    "outDir": "./dist",                      // Redirect output structure to the dist directory
    "rootDir": "./src"                       // Specify the root folder
  },
  "include": [
    "src/**/*.ts"                            // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules",                          // Exclude node_modules directory
    "dist"                                   // Exclude dist directory for cleaner builds
  ]
}
